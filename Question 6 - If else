#include <iostream>
using namespace std;

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    num = abs(num); // Handle negative numbers

    if (num >= 100 && num <= 999) {
        int sum = (num / 100) + ((num / 10) % 10) + (num % 10);
        cout << "Sum of digits: " << sum;
    } else {
        cout << "Not a three-digit number.";
    }

    return 0;
}
