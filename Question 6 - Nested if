#include <iostream>
using namespace std;

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    num = abs(num);

    if (num >= 100) {
        if (num <= 999) {
            int sum = (num / 100) + ((num / 10) % 10) + (num % 10);
            cout << "Sum of digits: " << sum;
        } else {
            cout << "Not a three-digit number.";
        }
    } else {
        cout << "Not a three-digit number.";
    }

    return 0;
}
