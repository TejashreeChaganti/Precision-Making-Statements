#include <iostream>
using namespace std;

int main() {
    int choice;
    float radius;
    cout << "Enter 1 to calculate area of circle: ";
    cin >> choice;

    if (choice == 1) {
        cout << "Enter radius: ";
        cin >> radius;
        float area = 3.1416 * radius * radius;
        cout << "Area of circle: " << area << endl;
    } else if (choice == 2) {
        cout << "Option 2 not implemented." << endl;
    } else if (choice == 3) {
        cout << "Option 3 not implemented." << endl;
    } else {
        cout << "Invalid input." << endl;
    }

    return 0;
}
