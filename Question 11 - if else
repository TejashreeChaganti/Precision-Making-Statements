#include <iostream>
using namespace std;

int main() {
    int choice;
    float base, height;
    cout << "Enter 2 to calculate area of triangle: ";
    cin >> choice;

    if (choice == 2) {
        cout << "Enter base and height: ";
        cin >> base >> height;
        float area = 0.5 * base * height;
        cout << "Area of triangle: " << area << endl;
    } else {
        cout << "Invalid input." << endl;
    }

    return 0;
}
